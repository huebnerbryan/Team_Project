<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edubhuebner.washington.httpstudents.teamapp" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QueryActivity_1"
            android:label="@string/title_activity_query_activity_1" >
        </activity>
        <activity
            android:name=".GameStatus"
            android:label="@string/title_activity_game_status" >
        </activity>
        <activity
            android:name=".ResultsStatus"
            android:label="@string/title_activity_results_status" >
        </activity>
        <activity
            android:name=".DistanceQuery"
            android:label="@string/title_activity_distance_query" >
        </activity>
        <activity
            android:name=".UserQuery"
            android:label="@string/title_activity_user_query" >
        </activity>
    </application>

</manifest>
